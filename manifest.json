{
    "name": "Zoho Sprints Git Branch Title Generator",
    "short_name": "Branch Title",
    "description": "This extension generates a git branch title based on data from a Zoho Sprints item/task.",
    "version": "0.3",
    "homepage_url": "http://www.gesiel.com/",
    "minimum_chrome_version": "16.0.884",
    "icons": {
        "128": "icons/icon128.png"
    },
    "permissions": [
        "tabs",
        "https://sprints.zoho.com/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://sprints.zoho.com/*"
            ],
            "js": [
                "script.js"
            ]
        }
    ],
    "browser_action": {
        "default_popup": "popup.html"
    },
    "manifest_version": 2
}
